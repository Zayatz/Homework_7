<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="itemStyle" parent="AppTheme">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/activity_vertical_margin</item>
        <item name="android:layout_marginBottom">@dimen/activity_vertical_margin</item>
        <item name="android:layout_marginLeft">@dimen/activity_horizontal_margin</item>
        <item name="android:layout_marginRight">@dimen/activity_horizontal_margin</item>
    </style>

    <style name="itemBarStyle" parent="AppTheme">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/item_btn_height</item>
        <item name="android:background">@drawable/tv_item_bar_am</item>
        <item name="android:textColor">@drawable/item_text_color</item>
    </style>

    <style name="itemBtnStyle" parent="AppTheme">
        <item name="android:layout_width">@dimen/item_btn_width</item>
        <item name="android:layout_height">@dimen/item_btn_height</item>
        <item name="android:background">@drawable/view_btn_item_am</item>
    </style>

    <style name="itemTextStyle" parent="AppTheme">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/tv_item_text_am</item>
        <item name="android:textColor">@drawable/item_text_color</item>
    </style>

</resources>
